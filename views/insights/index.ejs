<link rel="stylesheet" href="/css/insights.css">

<a href="/" class="back-arrow" aria-label="Back to Mandala Section">
    <i class="fas fa-chevron-left"></i>
</a>

<main class="container">
    <div class="insights-grid">

        <!-- SECTION 1: Distribution By Mandala -->
        <section class="insight-section">
            <h3 class="section-title">Distribution By Mandala</h3>
            <div class="insight-boxes">
                <div class="insight-box card-item" data-graph-type="hymn-distribution-mandala" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/hymn_dist_mandala1.png" alt="Hymn Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Hymn Distribution by Mandala</h3>
                        <div class="card-description-box">
                            <p>View the count of hymns in each Rigvedic mandala.</p>
                        </div>
                    </div>
                </div>
                <div class="insight-box card-item" data-graph-type="deity-distribution-mandala" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/deity_dist_mandala.png" alt="Deity Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Deity Distribution by Mandala</h3>
                        <div class="card-description-box">
                            <p>Understand how different deities are invoked across mandalas.</p>
                        </div>
                    </div>
                </div>
                <div class="insight-box card-item" data-graph-type="rishi-distribution-mandala" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/rishi_dist_mandala.png" alt="Rishi Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Rishi Distribution by Mandala</h3>
                        <div class="card-description-box">
                            <p>See the contribution of various Rishis to each mandala.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION 2: Meter Distribution -->
        <section class="insight-section">
            <h3 class="section-title">Meter Distribution</h3>
            <div class="insight-boxes">
                <div class="insight-box card-item" data-graph-type="meter-distribution-global" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/meter_dist_global.png" alt="Meter Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Global Meter Distribution</h3>
                        <div class="card-description-box">
                            <p>Analyze the most prevalent meters used throughout the Rigveda.</p>
                        </div>
                    </div>
                </div>
                <div class="insight-box card-item" data-graph-type="meter-distribution-mandala" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/meter_dist_mandala.png" alt="Meter Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Meter Distribution by Mandala</h3>
                        <div class="card-description-box">
                            <p>Examine meter usage variations across different mandalas.</p>
                        </div>
                    </div>
                </div>
                <div class="insight-box card-item" data-graph-type="meter-distribution-deity" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/meter_dist_deity.png" alt="Meter Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Meter Distribution by Deity</h3>
                        <div class="card-description-box">
                            <p>Discover which meters are commonly associated with specific deities.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- SECTION 3: Word Distribution -->
        <section class="insight-section">
            <h3 class="section-title">Word Distribution</h3>
            <div class="insight-boxes">
                <div class="insight-box card-item" data-graph-type="word-distribution-global" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/word_dist_global.png" alt="Word Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Global Word Distribution</h3>
                        <div class="card-description-box">
                            <p>Explore the overall frequency of words in the entire Rigveda.</p>
                        </div>
                    </div>
                </div>
                <div class="insight-box card-item" data-graph-type="word-distribution-mandala" role="button">
                    <div class="box-visual card-image-wrapper">
                        <img class="card-image" src="/images/insights/word_dist_mandala.png" alt="Word Distribution Icon">
                    </div>
                    <div class="box-content card-content">
                        <h3>Word Distribution by Mandala</h3>
                        <div class="card-description-box">
                            <p>See how word usage varies from one mandala to another.</p>
                        </div>
                    </div>
                </div>
                <div class="insight-box card-item" data-graph-type="word-distribution-deity" role="button">
                    <div class="box-visual card-image-wrapper">
